<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/view_margin"
    android:layout_marginLeft="@dimen/view_margin"
    android:layout_marginTop="@dimen/view_margin"
    android:layout_marginBottom="@dimen/view_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_item_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hab_pubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_item_margin"
                android:textColor="@color/colorGreyHabr"
                android:text="@string/hab_pubDate" />
            <TextView
                android:id="@+id/had_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_item_margin"
                android:textColor="@color/colorGreyHabr"
                android:text="@string/hab_creator" />
        </LinearLayout>

        <TextView
            android:id="@+id/hab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_item_margin"
            android:layout_marginRight="@dimen/view_item_margin"
            android:text="@string/hab_title" />
    </LinearLayout>



</LinearLayout>